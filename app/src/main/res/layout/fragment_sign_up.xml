<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<data>
<variable
    name="signUpViewModel"
    type="android.example.myapplication002.screens.signInOrUp.SignUpViewModel"/>

</data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="25dp"
        android:hint="Όνομα Χρήστη"
        android:id="@+id/user_name_text"
        android:imeOptions="actionDone"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="25dp"
        android:hint="E-mail"
        android:id="@+id/email_text"
        android:imeOptions="actionDone"
        />

    <EditText
        android:id="@+id/password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="25dp"
        android:hint="Κωδικός"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        />

    <EditText
        android:id="@+id/password_confirm_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="25dp"
        android:hint="Επιβεβαίωση Κωδικού"
        android:inputType="textPassword"
        android:imeOptions="actionDone"/>
    <Button
        android:layout_marginTop="50dp"
        style="@style/button_style"
        android:text="Δημιουργία χρήστη"
        android:id="@+id/create_user_button"
        android:imeOptions="actionDone"/>

